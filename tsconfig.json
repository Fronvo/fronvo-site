{
    "extends": "./.svelte-kit/tsconfig.json",
    "compilerOptions": {
        "baseUrl": "src/",
        "paths": {
            "interfaces": ["interfaces/*"],
            "stores/*": ["stores/*"],
            "utilities/*": ["utilities/*"],
            "types/*": ["types/*"],
            "variables/*": ["variables/*"],

            // SvelteKit may complain, but we have the baseUrl set sooooo we'll see
            "$lib": ["lib"],
            "$lib/*": ["lib/*"]
        },
        "pretty": true
    }
}
